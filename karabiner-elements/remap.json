{
    "description": "Remap Option + , to <",
    "manipulators": [
        {
            "from": {
                "key_code": "comma",
                "modifiers": { "mandatory": ["option"] }
            },
            "to": [{ "key_code": "grave_accent_and_tilde" }],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "period",
                "modifiers": { "mandatory": ["option"] }
            },
            "to": [
                {
                    "key_code": "grave_accent_and_tilde",
                    "modifiers": ["shift"]
                }
            ],
            "type": "basic"
        }
    ]
}